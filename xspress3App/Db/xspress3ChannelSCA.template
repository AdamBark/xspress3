# ///
# /// Read SCA $(SCA) on channel $(CHAN)
# ///
record(longin, "$(P)$(R)C$(CHAN)_SCA$(SCA)_RBV")
{
   field(PINI, "1")
   field(DTYP, "asynInt32")
   field(INP,  "@asyn($(PORT),$(ADDR),$(TIMEOUT))XSP3_CHAN_SCA$(SCA)")
   field(SCAN, "I/O Intr")
}

